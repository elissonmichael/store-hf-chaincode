{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2017",
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"allowJs": true,
		"alwaysStrict": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./src/**/*.spec.ts"]
}
